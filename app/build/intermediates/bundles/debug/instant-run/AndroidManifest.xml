<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kristian.android.simpletodo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.kristian.android.simpletodo.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kristian.android.simpletodo.EditItemActivity"
            android:label="@string/title_activity_edit_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.kristian.android.activities.DisplayItemActivity" />
        <activity android:name="com.kristian.android.activities.AddItemActivity" />
    </application>

</manifest>